{
	"manifest_version": 2,
	"name": "Tareas PatmOS",
	"version": "1.0",
	"author": "Eduardo Antonio Arce Saavedra",
	"description": "Extensión para ver tareas pendientes del PatmOS",
	"icons": {
		"16": "logo16.png",
		"48": "logo48.png",
		"128": "logo128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_title": "Extensión PatmOS",
		"default_popup": "popup.html"
	},
	"permissions": [
		"https://patmos.upeu.edu.pe/#/*"
	]
}
